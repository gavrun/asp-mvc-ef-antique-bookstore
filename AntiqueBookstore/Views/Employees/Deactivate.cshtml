@model AntiqueBookstore.Domain.Entities.Employee

@{
    ViewData["Title"] = "Deactivate Employee";
}

<h3>@ViewData["Title"]</h3>

<h4 class="text-warning">Are you sure you want to deactivate this employee?</h4> @* warning attr *@

<div>
    <h4>Employee: @Model.FirstName @Model.LastName (ID: @Model.Id)</h4>
    <hr />

    <p>Key details of the employee for confirmation.</p>

    @* TODO: Key employee details (First Name, Last Name, Current Position) *@

    <form asp-action="Deactivate">
        @* Make sure asp-action matches ActionName in controller POST method *@
        <input type="hidden" asp-for="Id" /> @* pass ID for POST *@

        <input type="submit" value="Deactivate" class="btn btn-warning" />  
        <a asp-action="Index">Cancel</a> 
    </form>

</div>

