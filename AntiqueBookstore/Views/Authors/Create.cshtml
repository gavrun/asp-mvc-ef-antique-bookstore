@model AntiqueBookstore.Domain.Entities.Author

@{
    ViewData["Title"] = "Create Author";
}

<h1>Create Author</h1>

<h4>Author</h4>
<hr />

<div class="row">

    <div class="col-md-8">
        <form asp-action="Create">

            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control"></input>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control"></input>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="BirthYear" class="control-label"></label>
                        <input asp-for="BirthYear" class="form-control"></input>
                        <span asp-validation-for="BirthYear" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="DeathYear" class="control-label"></label>
                        <input asp-for="DeathYear" class="form-control"></input>
                        <span asp-validation-for="DeathYear" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Bio" class="control-label"></label>
                <textarea asp-for="Bio" class="form-control"></textarea>
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>
    </div>

    <div class="col-md-3 offset-md-1">
        <h5>[INFO] Considerations</h5>
        <hr />
        <p>
            <strong>Author:</strong> Please enter carefuly bla bla bla.
        </p>
        <p>
            <strong>Full Name:</strong> The concept of a full name in different countries bla bla.
        </p>
        <p>
            <strong>Lifetime:</strong> It is short bla bla.
        </p>
        <p>
            <strong>Biography:</strong> Most of the time it is not published in a book be bla bla.
        </p>
        

    </div>

</div>

<hr />
